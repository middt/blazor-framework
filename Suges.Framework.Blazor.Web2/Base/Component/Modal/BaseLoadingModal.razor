@inherits Suges.Framework.Blazor.Web.Base.Component.Modal.BaseModalCode
@using Radzen.Blazor;
@using Radzen;

<BaseModal Title="@Title" @ref="baseModal" Style = "min-height:auto;min-width:auto;width:auto" ModalName="Loading" ShowTitle="false">
    <ChildContent>
        <div class="d-flex align-items-center">
            <strong>Loading...</strong>
            <div class="spinner-border ml-auto" role="status" aria-hidden="true"></div>
        </div>
    </ChildContent>
</BaseModal>
@code{
        public BaseModal baseModal { get; set; }

        public void Open()
        {
            baseModal.Open();
        }

        public void Close()
        {
            baseModal.Close();
        }
}