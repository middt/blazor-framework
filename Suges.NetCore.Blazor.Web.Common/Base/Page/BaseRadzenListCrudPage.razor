@inherits BaseRadzenListCrudPageComponentClass<TService, TInterface, TModel>

@using Suges.Framework.Blazor.Web.Base
@using Suges.Framework.Blazor.Web.Base.Page
@using Suges.Framework.Blazor.Web.Base.Component.Modal


@using Suges.Framework.Model.Model.Enumerations

@using Suges.Framework.Blazor.Web.Base.Component.Pagination;
@using Suges.Framework.Blazor.Web.Base.Component.Alert;
@using Radzen.Blazor;
@using Radzen;

@typeparam TService
@typeparam TInterface
@typeparam TModel


@if (SearchContent != null)
{
    <RadzenCard>
        <EditForm Model="@SearchRequestModel">
            <div class="row" style="margin-top:10px;">
                @SearchContent
            </div>
              @if (!HideSearchButton)
            {
                <div class="row" style="margin-top:10px;">
                    <div class="col-lg-5">
                    <RadzenButton Icon="search" Text="Ara" Click="() => AraButton()" />

                    <RadzenButton Icon="search_off" Text="İptal" Style="font-size:11pt;background-color:dimgray;" Click="() => Cancel()" />
                </div>
            </div>
    }
        </EditForm>
    </RadzenCard>
}
<br />

<RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="@InsertText" Click="() => New()" />

<RadzenGrid AllowColumnResize="true" @ref="radzenGrid" 
            TItem=TModel>
    <Columns>
        @ListContent

      
    </Columns>
</RadzenGrid>

<BaseCrudModal Title="@ModalTitle" @ref="CrudModal" IsFullScreen="@IsModalFullScreen" Width="@ModalWidth" Height="@ModalHeight" >
    <ChildContent>
        @EditContent
    </ChildContent>
</BaseCrudModal>

<BaseLoadingModal @ref="LoadingModal">
</BaseLoadingModal>