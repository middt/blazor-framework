@inherits BaseComponent

@using Suges.Framework.Blazor.Web.Base


@if (TotalPage > 0 && CurrentPage > 0)
{


<div class="ui-paginator-bottom ui-paginator ui-widget ui-widget-header ui-unselectable-text ui-helper-clearfix">
    @if (CurrentPage == 1)
        {
    <span class="ui-paginator-first ui-paginator-element ui-state-default ui-corner-all ui-state-disabled">
        <span class="ui-paginator-icon pi pi-step-backward"></span>
    </span>
    <span class="ui-paginator-prev ui-paginator-element ui-state-default ui-corner-all ui-state-disabled">
        <span class="ui-paginator-icon pi pi-caret-left"></span>
    </span>
    }
        else
        {
    <span class="ui-paginator-first ui-paginator-element ui-state-default ui-corner-all">
        <span class="ui-paginator-icon pi pi-step-backward" @onclick="() => GotoPage(1)"></span>
    </span>
    <span class="ui-paginator-prev ui-paginator-element ui-state-default ui-corner-all">
        <span class="ui-paginator-icon pi pi-caret-left" @onclick="() => Previous()"></span>
    </span>
    }


    <span class="ui-paginator-pages">


        @for (int pageIndex = 1; pageIndex <= TotalPage; pageIndex++)
            {
                var currentIndex = pageIndex;


        @if (CurrentPage == currentIndex)
                {
        <span class="ui-paginator-page ui-paginator-element ui-state-default ui-corner-all ui-state-active">@currentIndex</span>
        }
                else
                {
        <span class="ui-paginator-page ui-paginator-element ui-state-default ui-corner-all" @onclick="() => GotoPage(currentIndex)">@currentIndex</span>
        }
        }
    </span>

    @if (CurrentPage == TotalPage)
        {
    <span class="ui-paginator-next ui-paginator-element ui-state-default ui-corner-all ui-state-disabled">
        <span class="ui-paginator-icon pi pi-caret-right"></span>
    </span>
    <span class="ui-paginator-last ui-paginator-element ui-state-default ui-corner-all ui-state-disabled">
        <span class="ui-paginator-icon pi pi-step-forward">
        </span>
    </span>
    }
        else
        {
    <span class="ui-paginator-next ui-paginator-element ui-state-default ui-corner-all">
        <span class="ui-paginator-icon pi pi-caret-right" @onclick="() => Next()"></span>
    </span>
    <span class="ui-paginator-last ui-paginator-element ui-state-default ui-corner-all">
        <span class="ui-paginator-icon pi pi-step-forward" @onclick="() => GotoPage(TotalPage)">
        </span>
    </span>
    }
</div>
}